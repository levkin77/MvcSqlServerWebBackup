@model MvcSqlServerWebBackup.Models.ModelBackupTaskViewDetail
@{
    ViewBag.Title = "Удаление задания резервного копирования";
}

<h2>Вы точно хотите удалить задание резервного копирования?</h2>
<div>
    <h4>Задание: @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Name, "Наименование")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Name, "Описание")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Memo)
        </dd>
        
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Назад к списку", "Index") 
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </div>
    }
</div>
